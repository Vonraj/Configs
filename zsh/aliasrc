# -----------------------------------------------------
# EDITOR
# -----------------------------------------------------

alias v="nvim"
alias sv="sudo nvim"


# -----------------------------------------------------
# PACMAN
# -----------------------------------------------------


alias in="sudo pacman -S"
alias unin="sudo pacman -Rs"
alias up="sudo pacman -Syu"


# -----------------------------------------------------
# FLATPAK
# -----------------------------------------------------

alias fup="flatpak update"
alias fin="flatpak install"
alias fun="flatpak uninstall"

# -----------------------------------------------------
# GENERAL
# -----------------------------------------------------


alias c="clear"
alias nf="neofetch"
alias bat='bat --style header --style snip --style changes --style header'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'

# -----------------------------------------------------
# GIT
# -----------------------------------------------------

alias gs="git status"
alias ga="git add"
alias gc="git commit -m"
alias gp="git push"
alias gpl="git pull"
alias gcl="git clone"

# -----------------------------------------------------
# EDIT CONFIG FILES
# -----------------------------------------------------

alias confq="v ~/Configs/qtile/config.py"
alias confa="v ~/Configs/apps"
alias copytext='xclip -selection clipboard <'
alias token="copytext ~/token"
alias confz="v ~/Configs/zsh/.zshrc"
alias conf="cd ~/Configs"




